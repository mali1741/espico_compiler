__nfo__
Fireball particle trace demo
__src__
char key;
int c;
int x,y;
int deg;

void init() {
 parttime(1000,300);
 c = partcolor(10,8,4,PARTICLE_SHRINK|PARTICLE_FRIC);
 partdir(0,45,225,3);
 deg = 45;
 x = 64;
 y = 64;
}

void control_player() {
  // how fast to accelerate
  key = kget();
  
  if (key & KEY_LEFT) x -= 2;
  if (key & KEY_RIGHT) x += 2;
  if (key & KEY_UP) y -= 2;
  if (key & KEY_DOWN) y += 2;
}

void update() {
 control_player();
 partset(x,y,c,1,6);
}

void draw() {
 bcol(0);
 cls();
 bcol(10);
 circfill(x,y,3);
 partdraw();
}
